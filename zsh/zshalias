# Commands
alias bcat='batcat'
alias batdiff='git diff --name-only --relative --diff-filter=d | xargs bat --diff'
alias ll='exa -laFH --group-directories-first --icons'
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# File Access
alias edit-dotfiles='code $HOME/dotfiles'

# Paths
alias dev='cd $HOME/development'
alias lab='cd $HOME/development/lab'
alias dotfiles='cd $HOME/dotfiles'

# Refreshers
alias refresh-aws-token='source $DOTFILES_ZSH_PATH/bootstrap/aws.sh'
alias refresh-zsh='source $HOME/.zshrc'
